[Hotkey/TogglePreedit]
0=Control+Alt+P

[Behavior]
# 기본적으로 활성화
ActiveByDefault=False
# Reset state on Focus In
resetStateWhenFocusIn=No
# 입력 상태 공유
ShareInputState=No
# 응용프로그램에서 사전편집 표시
